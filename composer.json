{
    "name": "itk-dev/getorganized-api-client-php",
    "type": "library",
    "autoload": {
        "psr-4": {
            "ItkDev\\GetorganizedApiClientPhp\\": "src/"
        }
    },
    "authors": [
        {
            "name": "jekuaitk",
            "email": "jekua@aarhus.dk"
        },
        {
            "name": "Mikkel Ricky",
            "email": "rimi@aarhus.dk"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-curl": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.7"
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 0
    },
    "scripts": {
        "coding-standards-check/php-cs-fixer": [
            "php -n vendor/bin/php-cs-fixer fix --allow-risky=yes --dry-run"
        ],
        "coding-standards-check": [
            "@coding-standards-check/php-cs-fixer"
        ],
        "coding-standards-apply/php-cs-fixer": [
            "php -n vendor/bin/php-cs-fixer --allow-risky=yes fix"
        ],
        "coding-standards-apply": [
            "@coding-standards-apply/php-cs-fixer"
        ]
    }
}
